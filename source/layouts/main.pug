doctype html
html(lang="en")
    head
        block meta
            meta(charset="UTF-8")
            meta(name="viewport" content="width=device-width, initial-scale=1.0")
            meta(name="description" content="Kyle's online space for his portfolio and different musing on design and craft.")
            meta(name="author" content="Kyle Kochanek")

        block title
            title Kyle Kochanek's Online Space

        //- Stylesheets
        link(rel="stylesheet" href="/scss/main.css")

        //- Favicon
        link(rel="icon" href="/favicon.ico" type="image/x-icon")

        block additional_head

    body
        //- Navigation
        include ../components/_nav

        //- Main content area
        main.content-wrapper
            block content

        //- Footer
        include ../components/_footer

        //- Scripts
        script(src="/js/nav.js")
        block scripts